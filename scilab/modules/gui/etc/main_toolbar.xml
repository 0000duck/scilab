<?xml version="1.0"?>
<toolbar>
    <!-- New Scilab -->
    <button icon="window-new.png" enabled="false"/>

    <separator/>

    <!-- Scipad -->
    <button icon="accessories-text-editor.png">
        <callback instruction="scipad();" type="0"/>
    </button>
    <!-- Open File -->
    <button icon="document-open.png">
        <callback 
        instruction="
          %fileToOpen = xgetfile('*.sci', getcwd(), 'Select a file to open with Scipad');
          if ~isempty(%fileToOpen) then 
            scipad(%fileToOpen);
          end
          clear %fileToOpen"
        type="0"/>
    </button> 

    <separator/>

    <!-- Copy -->
    <button icon="edit-copy.png" enabled="false"/>
    <!-- Paste -->
    <button icon="edit-paste.png" enabled="false"/>

    <separator/>

    <!-- Change current directory -->
    <button icon="folder.png">
        <callback 
        instruction="
          %newDir = uigetdir(getcwd(), 'Select a directory');
          if ~isempty(%newDir) then 
            cd(%newDir);
          end
          clear %newDir"
        type="0"/>
    </button> 

    <separator/>

    <!-- Change font -->
    <button icon="format-text-bold.png" enabled="false"/>
    <!-- Print -->
    <button icon="printer.png" enabled="false"/>

    <separator/>

    <!-- Help -->
    <button icon="help-browser.png">
        <callback instruction="help();" type="0"/>
    </button>
</toolbar>