      <LINK>tk_getfile</LINK>
    </SEE_ALSO_ITEM>
    <SEE_ALSO_ITEM>
      <LINK>tk_getdir</LINK>
    </SEE_ALSO_ITEM>
  </SEE_ALSO>
</MAN>
