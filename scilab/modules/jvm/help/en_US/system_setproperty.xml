<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE MAN SYSTEM "../../../../modules/helptools/help.dtd">
<MAN>
  <LANGUAGE>eng</LANGUAGE>

  <TITLE>system_setproperty</TITLE>

  <TYPE>Scilab Function</TYPE>

  <DATE>$LastChangedDate: 2007-05-10 09:26:08 +0200$</DATE>

  <SHORT_DESCRIPTION name="system_setproperty">set a system property
  indicated by a specified key and value.</SHORT_DESCRIPTION>

  <CALLING_SEQUENCE>
    <CALLING_SEQUENCE_ITEM>prev = system_setproperty(key,value)</CALLING_SEQUENCE_ITEM>

  </CALLING_SEQUENCE>

  <PARAM>
    <PARAM_INDENT>
      <PARAM_ITEM>
        <PARAM_NAME>prev</PARAM_NAME>

        <PARAM_DESCRIPTION>
          <SP>: a string previous value or []</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>

      <PARAM_ITEM>
        <PARAM_NAME>key</PARAM_NAME>

        <PARAM_DESCRIPTION>
          <SP>: a string</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>
      
      <PARAM_ITEM>
        <PARAM_NAME>value</PARAM_NAME>

        <PARAM_DESCRIPTION>
          <SP>: a string</SP>
        </PARAM_DESCRIPTION>
      </PARAM_ITEM>
      
    </PARAM_INDENT>
  </PARAM>

  <DESCRIPTION>
    <P> Sets the system property indicated by the specified key.</P>
    <P> Warning : change property with precaution.</P>
  </DESCRIPTION>

  <EXAMPLE><![CDATA[system_getproperty('myproperty')
  system_setproperty('myproperty','hello')
  system_getproperty('myproperty')
]]></EXAMPLE>

  <AUTHOR>A.C</AUTHOR>
</MAN>