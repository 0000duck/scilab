//
// Test #1 : Without parameters
//
op = mtlb_optimset ();
if op.Display <> [] then bugmes();quit;end
if op.FunValCheck <> [] then bugmes();quit;end
if op.MaxFunEvals <> [] then bugmes();quit;end
if op.MaxIter <> [] then bugmes();quit;end
if op.OutputFcn <> [] then bugmes();quit;end
if op.PlotFcns <> [] then bugmes();quit;end
if op.TolFun <> [] then bugmes();quit;end
if op.TolX <> [] then bugmes();quit;end
clear op
function y = myoutputfun (x)
  y = x;
endfunction
function y = myplotfun (x)
  y = x;
endfunction
//
// Test #2 : With parameters
//
op = mtlb_optimset (...
  'Display','iter',...
  "FunValCheck","on",...
  "MaxFunEvals",100,...
  "MaxIter",110,...
  "OutputFcn",myoutputfun,...
  "PlotFcns",myplotfun,...
  "TolFun",1.e-12,...
  "TolX",1.e-13...
  );
Warning : redefining function: value                   . Use funcprot(0) to avoid this message

if op.Display <> "iter" then bugmes();quit;end
if op.FunValCheck <> "on" then bugmes();quit;end
if op.MaxFunEvals <> 100 then bugmes();quit;end
if op.MaxIter <> 110 then bugmes();quit;end
//if op.OutputFcn <> myoutputfun then bugmes();quit;end
//if op.PlotFcns <> myplotfun then bugmes();quit;end
if op.TolFun <> 1.e-12 then bugmes();quit;end
if op.TolX <> 1.e-13 then bugmes();quit;end
clear op
//
// Test #3 : Copy one option set into another
//
op1 = mtlb_optimset ("TolFun",1.e-12);
op2 = mtlb_optimset (op1,"TolX",1.e-13);
if op2.TolFun <> 1.e-12 then bugmes();quit;end
if op2.TolX <> 1.e-13 then bugmes();quit;end
clear op1
clear op2
//
// Test #3 : with one method name
//
op = mtlb_optimset ("fminsearch");
if op.TolFun <> 1.e-4 then bugmes();quit;end
if op.TolX <> 1.e-4 then bugmes();quit;end
if op.Display <> "notify" then bugmes();quit;end
if op.MaxFunEvals <> "200*numberofvariables" then bugmes();quit;end
if op.MaxIter <> "200*numberofvariables" then bugmes();quit;end
clear op
