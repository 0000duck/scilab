<MAN>
  <LANGUAGE>eng</LANGUAGE>
  <TITLE>crossover_func_binary</TITLE>
  <TYPE>Scilab Function  </TYPE>
  <DATE>4-Feb-2008</DATE>
  <SHORT_DESCRIPTION name="crossover_func_binary"> A crossover function for binary code </SHORT_DESCRIPTION>

  <CALLING_SEQUENCE>
  <CALLING_SEQUENCE_ITEM>[Crossed_Indiv1,Crossed_Indiv2] = crossover_func_binary(Indiv1,Indiv2,param)</CALLING_SEQUENCE_ITEM>
  </CALLING_SEQUENCE>

  <PARAM>
  <PARAM_INDENT>

    <PARAM_ITEM>
    <PARAM_NAME>Indiv1</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : the first individual (here a binary code) to be crossed-over.
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>

    <PARAM_ITEM>
    <PARAM_NAME>Indiv2</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : the second individual to be crossed-over.
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>

    <PARAM_ITEM>
    <PARAM_NAME>param</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : a list of parameters.
         - 'binary_length': the length of the binary code.
         - 'multi_cross': a boolean. If %T then we allow several cuts in the binary code.
         - 'multi_cross_nb': the number of cuts in the binary code. Only used when multi_cross is set to %T.
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>

    <PARAM_ITEM>
    <PARAM_NAME>Crossed_Indiv1</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : The first individual obtained by the cross-over function.
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>

    <PARAM_ITEM>
    <PARAM_NAME>Crossed_Indiv2</PARAM_NAME>
    <PARAM_DESCRIPTION>
       <SP>
       : The second individual obtained by the cross-over function.
       </SP>
    </PARAM_DESCRIPTION>
    </PARAM_ITEM>
  </PARAM_INDENT>
  </PARAM>
 
  <DESCRIPTION>
     <DESCRIPTION_INDENT>
     <DESCRIPTION_ITEM>
     <P>
      This function implements a classical binary cross-over.
     </P>
     </DESCRIPTION_ITEM>
     </DESCRIPTION_INDENT>
  </DESCRIPTION>

