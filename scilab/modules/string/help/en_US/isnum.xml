<!DOCTYPE MAN SYSTEM "../../../../modules/helptools/help.dtd">
<MAN>
	<LANGUAGE>eng</LANGUAGE>
	<TITLE>isnum</TITLE>
	<TYPE>Scilab Function</TYPE>
	<DATE>$LastChangedDate: 2006-08-08 16:57:13 +0200 (Tue, 08 Aug 2006) $</DATE>
	<SHORT_DESCRIPTION name="isnum"> tests if a string represents a number</SHORT_DESCRIPTION>
	
	<CALLING_SEQUENCE>
		<CALLING_SEQUENCE_ITEM>res = isnum(str)</CALLING_SEQUENCE_ITEM>
	</CALLING_SEQUENCE>
	
	<PARAM>
		<PARAM_INDENT>
			<PARAM_ITEM>
				<PARAM_NAME>str</PARAM_NAME>
				<PARAM_DESCRIPTION>
					<SP>: string matrix</SP>
				</PARAM_DESCRIPTION>
			</PARAM_ITEM>        
			<PARAM_ITEM>
				<PARAM_NAME>res</PARAM_NAME>
				<PARAM_DESCRIPTION>
					<SP>: boolean matrix.</SP>
				</PARAM_DESCRIPTION>
			</PARAM_ITEM>
		</PARAM_INDENT>
	</PARAM>
	
	<DESCRIPTION>
		<P>
			<VERB>res = isnum(str)</VERB>returns %T if str represents a number
		</P>
	</DESCRIPTION>
	
	<EXAMPLE>
	<![CDATA[
isnum(['1'     , ..
       '-1.23' , ..
       '+1e+23', .. 
       '1d+23' , ..
       '%pi'])
	]]>
	</EXAMPLE>
	
