<project name="javasci" default="compile">

   <property name="dist"  location="../../../../java/jar/modules" />
   
   <description>
        build javasci Scilab - Java Interface
    </description>
    
    <target name="init">
			<!-- Create the time stamp -->
			<tstamp/>
		</target>

    <target name="clean" description="clean sources">
        <delete dir="build"/>
        <delete file="${dist}/javasci.jar"/>
    </target>

    <target name="compile" description="build sources" depends="init">
    
        <mkdir dir="build/classes"/>
        <javac srcdir="javasci" destdir="build/classes"/>
    </target>

    <target name="jar" description="do .jar file" depends="compile">
        <jar destfile="${dist}/javasci.jar" basedir="build/classes">
            <manifest>
                <attribute name="SciAbstractDataType" value="SciAbstractDataType"/>
                <attribute name="SciBooleanArray" value="SciBooleanArray"/>
                <attribute name="SciComplexArray" value="SciComplexArray"/>
                <attribute name="SciDoubleArray" value="SciDoubleArray"/>
                <attribute name="SciString" value="SciString"/>
                <attribute name="BadDataArgumentException" value="BadDataArgumentException"/>
                <attribute name="SciAbstractArray" value="SciAbstractArray"/>
                <attribute name="SciBoolean" value="SciBoolean"/>
                <attribute name="SciComplex" value="SciComplex"/>
                <attribute name="SciDouble" value="SciDouble"/>
                <attribute name="Scilab" value="Scilab"/>
                <attribute name="SciStringArray" value="SciStringArray"/>
            </manifest>
        </jar>
    </target>

</project>
