// format '%f'
// =============================================================================

mprintf("==>%f<==",-35);

mprintf("==>%f<==",35.55);
mprintf("==>%f<==",0.00433);
mprintf("==>%f<==",0.0000000345456);
mprintf("==>%f<==",1112423453);

mprintf("==>%15f<==",-35);
mprintf("==>%15f<==",0.00433);
mprintf("==>%15f<==",0.0000000345456);
mprintf("==>%15f<==",1112423453);

mprintf("==>%.1f" ,-35);
