  <refsection>
    <title>Examples</title>
    <programlisting role="example"> 
    // editor without parameters
    editor();
    
    // editor with a file name
    editor('SCI/etc/scilab.start');
    
    // editor with a matrice of files name
    editor(['SCI/etc/scilab.start','SCI/etc/scilab.quit']);
    
    // editor with a file name and the line number to highlight
    editor_highlightline('SCI/etc/scilab.start', 1);
    </programlisting>
  </refsection>

