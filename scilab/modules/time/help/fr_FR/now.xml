			<LINK>now</LINK>
		</SEE_ALSO_ITEM>
		
		<SEE_ALSO_ITEM>
			<LINK>datenum</LINK>
		</SEE_ALSO_ITEM>
		
		<SEE_ALSO_ITEM>
			<LINK>datevec</LINK>
		</SEE_ALSO_ITEM>
	</SEE_ALSO>
	
	<AUTHORS>
